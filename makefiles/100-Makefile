CC = gcc
SRC = main.c school.c
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) *~ \#* $(NAME)

oclean:
	$(RM) $(SRC:.c=.o)

fclean: clean oclean

re: oclean all

$(SRC): m.h

.PHONY: all clean oclean fclean re
