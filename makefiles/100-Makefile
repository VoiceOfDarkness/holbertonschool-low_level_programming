CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
RM = /bin/rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
DEPS = m.h

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
    $(CC) $(OBJ) -o $(NAME)

%.o: %.c $(DEPS)
    $(CC) $(CFLAGS) -c $< -o $@

clean:
    $(RM) $(OBJ) $(NAME) *~ \#*\# *.swp

oclean:
    $(RM) $(OBJ)

fclean: oclean clean

re: fclean all
