CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) *~ \#* $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all

$(OBJ): %.o: %.c m.h

$(SRC): m.h

.PHONY: all clean oclean fclean re
