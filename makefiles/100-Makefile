CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	@find . -type f -name '*~' -exec rm -f {} +
	@find . -type f -name '#*' -exec rm -f {} +
	@rm -f $(NAME)

oclean:
	@rm -f $(SRC:.c=.o)

fclean: clean oclean

re: oclean all

$(SRC): m.h

.PHONY: all clean oclean fclean re
